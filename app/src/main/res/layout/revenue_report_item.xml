<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@color/colorPrimaryDark">

        <ImageView
            android:id="@+id/revenue_reporter_image_view"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="2dp"/>

        <TextView
            android:id="@+id/currency_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/revenue_reporter_image_view"
            android:layout_alignParentTop="true"
            android:text="Amount: "
            android:textSize="20sp"/>


        <TextView
            android:id="@+id/revenue_amount_reported_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GHC 2300.00"
            android:layout_toEndOf="@+id/currency_text_view"
            android:layout_alignParentTop="true"
            android:textSize="20sp"
            android:textStyle="bold"/>


        <TextView
            android:id="@+id/revenue_collector_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="That [is so], and [also] that Allah will weaken the plot of the disbelievers."
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/revenue_amount_reported_text_view"
            android:layout_toEndOf="@+id/revenue_reporter_image_view"/>


        <TextView
            android:id="@+id/revenue_reported_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/revenue_collector_name_text_view"
            android:text="Reported on...22nd June, 2018"
            android:layout_margin="10dp"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>